<body>
  <div class="card">
    <h1>IBAN Ayıklayıcı</h1>
    <textarea id="inputText" placeholder="Mesajı buraya yapıştırın..."></textarea>
    <button onclick="extractIBAN()">Ayıkla</button>
    <div class="result" id="outputArea">
      <p><strong>IBAN:</strong> <span id="ibanResult"></span></p>
      <p><strong>İsim-Soyisim:</strong> <span id="nameResult"></span></p>
      <p><strong>Banka:</strong> <span id="bankResult"></span></p>
    </div>
  </div>

  <script>
    function extractIBAN() {
      const text = document.getElementById("inputText").value;
      const ibanMatch = text.match(/TR\d{24}/i);
      const bankList = [
        "Ziraat", "Vakıfbank", "Halkbank", "İş Bankası",
        "Yapı Kredi", "Garanti", "Akbank", "TEB", "QNB", "Enpara"
      ];
      const bankRegex = new RegExp(bankList.join("|"), "i");
      const bankMatch = text.match(bankRegex);
      let name = text
        .replace(/TR\d{24}/i, "")
        .replace(bankRegex, "")
        .trim()
        .replace(/\s{2,}/g, " ");
      document.getElementById("ibanResult").textContent = ibanMatch ? ibanMatch[0] : "Bulunamadı";
      document.getElementById("bankResult").textContent = bankMatch ? bankMatch[0] : "Bulunamadı";
      document.getElementById("nameResult").textContent = name || "Bulunamadı";
      document.getElementById("outputArea").style.display = "block";
    }
  </script>
